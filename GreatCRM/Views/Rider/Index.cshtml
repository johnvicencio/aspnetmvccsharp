@model IEnumerable<GreatCRM.Models.Rider>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RiderName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RiderName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RiderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RiderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RiderId })
        </td>
    </tr>
}

</table>
