@model GreatCRM.Models.ViewModels.RecordViewModels

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3>To create a client go to the broker details and create a client under that</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Broker.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Clients) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Broker.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClientId, brokerId = item.BrokerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClientId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClientId })
        </td>
    </tr>
}

</table>
