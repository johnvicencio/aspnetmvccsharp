@model GreatCRM.Models.ViewModels.RecordViewModels

@{
    ViewBag.Title = "Proposal";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Proposal.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proposal.Insurance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Proposals) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Insurance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProposalId, clientId = item.ClientId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProposalId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProposalId })
        </td>
    </tr>
}

</table>
